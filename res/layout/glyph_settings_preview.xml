<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/bg_protection_background"
    android:orientation="vertical"
    android:paddingVertical="25dp">

    <ImageView
        android:id="@+id/phone_preview"
        android:layout_width="@dimen/preview_device_width"
        android:layout_height="@dimen/preview_device_height"
        android:layout_gravity="center"
        android:background="@drawable/bg_protection_background"
        android:src="@drawable/device_preview" />

</FrameLayout>